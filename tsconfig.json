{
  "compilerOptions": {
    "outDir": "dist/ts",
    "lib": ["es2019"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "stripInternal": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/contracts/**/*"]
}
